<!DOCTYPE StreamControlLayout>
<layout width="400" height="140" tabbed="1">

 <tab name="Match Info">

  <label x="10" y="14" width="46" height="13" dataSet="players.csv" dataField="2" >Player 1</label>
  <label x="10" y="44" width="46" height="13" dataSet="players.csv" dataField="2" >Player 2</label>
  <label x="300" y="14" width="46" height="13">Rounds</label>
  <lineEdit id="player1" dataSet="players.csv" dataField="2" x="60" y="10" width="171" height="20">Name</lineEdit>
  <lineEdit id="player2" dataSet="players.csv" dataField="2" x="60" y="40" width="171" height="20">Name</lineEdit>
  <spinBox id="p1score" x="245" y="10" width="42" height="24" maximum="10" />
  <spinBox id="p2score" x="245" y="40" width="42" height="24" maximum="10" />
  <spinBox id="rounds" x="340" y="10" width="42" height="24" maximum="10" />
  <button type="reset" x="300" y="40" width="41" height="23" tooltip="Reset the Scores" id="reset" reset="p1score,p2score">Reset</button>
  <button type="swap" x="340" y="40" width="41" height="23" tooltip="Swap the Scores" id="swap1" swapSet1="player1,p1score,p1id,p1team" swapSet2="player2,p2score,p2id,p2team">Swap</button>
 </tab>

 <tab name="Commentary">
  <label x="10" y="14" width="45" height="13">Caster 1</label>
  <label x="10" y="44" width="45" height="13">Caster 2</label>
  <lineEdit id="caster1" x="60" y="10" width="150" height="20" />
  <lineEdit id="caster2" x="60" y="40" width="150" height="20" />
  <label x="220" y="14" width="45" height="13">Twitter</label>
  <label x="220" y="44" width="45" height="13">Twitter</label>
  <lineEdit id="twitter1" x="265" y="10" width="100" height="20">@handle</lineEdit>
  <lineEdit id="twitter2" x="265" y="40" width="100" height="20">@handle</lineEdit>
 </tab>
 <tab name="Misc">
  <label x="10" y="14" width="46" height="13">Misc Text</label>
  <label x="10" y="44" width="46" height="13">Round</label>
  <lineEdit id="mText" x="60" y="10" width="321" height="20" />
  <lineEdit id="round" x="60" y="40" width="321" height="20" />
 </tab>
 <tab name="ID">
  <label x="10" y="14" width="125" height="13">Player 1 ID [ Do not edit ]</label>
  <label x="10" y="44" width="125" height="13">Player 2 ID [ Do not edit ]</label>
  <lineEdit id="p1id" x="140" y="10" width="50" height="20" dataSet="players.csv" dataField="1" master="player1" />
  <lineEdit id="p2id" x="140" y="40" width="50" height="20" dataSet="players.csv" dataField="1" master="player2" />
  <label x="210" y="14" width="125" height="13">P1 Team [ Do not edit ]</label>
  <label x="210" y="44" width="125" height="13">P2 Team [ Do not edit ]</label>
  <lineEdit id="p1team" x="330" y="10" width="50" height="20" dataSet="players.csv" dataField="3" master="player1" />
  <lineEdit id="p2team" x="330" y="40" width="50" height="20" dataSet="players.csv" dataField="3" master="player2" />
 </tab>
</layout>
